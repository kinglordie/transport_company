<div class="flex items-center justify-center w-full min-h-screen">
  <div class="flex -mx-2 shadow-lg">
  <div class="w-full max-w-md bg-white rounded-r px-12 pt-6 pb-8">
  <% if @counterparty.new_record? %>
      <h2 class="text-2xl font-bold text-left text-gray-700 mb-4">Новый контрагент</h2>  
  <% else %>
      <h2 class="text-2xl font-bold text-left text-gray-700 mb-4"><%= @counterparty.name %> <%= @counterparty.name %> </h2>
  <% end %>
<%= form_with(model: counterparty, local: true, class: "flex flex-col gap-y-4") do |form| %>
    <% if counterparty.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(counterparty.errors.count, "error") %> запрещено эту форму сохранить:</h2>
  
        <ul>
          <% counterparty.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
    <%= form.label :name,"Название", class: "block text-gray-700 text-sm font-bold mb-2"  %>
    <%= form.text_field :name, class: "w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500"  %>
    </div>
    <div class="field">
    <%= form.label :contact,"Контактный номер", class: "block text-gray-700 text-sm font-bold mb-2"  %>
    <%= form.text_field :contact, class: "w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500"   %>
    </div>
    <div class="field">
    <%= form.label :INN,"ИНН", class: "block text-gray-700 text-sm font-bold mb-2"   %>
    <%= form.text_field :INN, class: "w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500"   %>
    </div>
    <div class="field">
    <%= form.label :email,"Email", class: "block text-gray-700 text-sm font-bold mb-2"   %>
    <%= form.email_field :email, class: "w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500"   %>
    </div>
    <div class="field">
    <%= form.label :post,"Почтовый адрес", class: "block text-gray-700 text-sm font-bold mb-2"   %>
    <%= form.text_field :post, class: "w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500"   %>
    </div>
    <% if !@counterparty.new_record? %>
    <div class="field">
      <%= form.label :status, "Статус", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.select :status, Counterparty.statuses.keys.map { |key| [Counterparty.statuses[key].titleize, key] }, {}, { class: "w-full shadow border rounded py-2 pr-8 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500" } %>
    </div>
    <% end %>
  
    <div class="actions" >
      <% if @counterparty.new_record? %>
        <%= form.submit "Создать контрагента", class: "w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500" %>
      <% else %>
        <%= form.submit "Обновить информацию", class: "w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500" %>
        
      <% end %>
      
  </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
  
    </div>
  <% end %>
    </div>
    
  </div>

</div>
