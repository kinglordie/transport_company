
<div class="flex justify-center bg-white shadow-lg rounded-lg w-full">
  
  <div class="p-6">
    <div class="flex justify-center items-center">
    <h1 class="text-3xl font-bold text-center my-6 col-span-5 mr-4">Список прицепов</h1>
    <%= link_to new_trailer_path, class: 'flex items-center justify-center h-12 w-12 bg-green-500 hover:bg-green-700 text-white rounded-full shadow-lg' do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
    <%= link_to trailer_repairs_path, class: 'mr-4 flex ml-2 items-center justify-center hover:bg-green-700 h-12 w-12 bg-green-500 text-white rounded-full shadow-lg' do %>
      <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path fill="#FFFFFF" d="M756-120 537-339l84-84 219 219-84 84Zm-552 0-84-84 276-276-68-68-28 28-51-51v82l-28 28-121-121 28-28h82l-50-50 142-142q20-20 43-29t47-9q24 0 47 9t43 29l-92 92 50 50-28 28 68 68 90-90q-4-11-6.5-23t-2.5-24q0-59 40.5-99.5T701-841q15 0 28.5 3t27.5 9l-99 99 72 72 99-99q7 14 9.5 27.5T841-701q0 59-40.5 99.5T701-561q-12 0-24-2t-23-7L204-120Z"/></svg>
    <% end %>
    </div>
    <div class="gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 grid grid-cols-1">
    <% @trailers.each do |trailer| %>
    <%= link_to trailer_path(trailer)  do %>
      <div class="flex p-4 rounded-lg mb-2 shadow-md hover:bg-green-200">
        <% if trailer.photo.attached? %>
          <%= image_tag trailer.photo, class: "w-32 h-32 object-cover mr-2"  %>
        <% end %>
        <div class="w-full flex flex-col">
        <div>Номер грузовика: <%= trailer.car_number %></div>
        <div>Модель грузовика: <%= trailer.model %></div>
        <div>VIN: <%= trailer.VIN %></div>
        <div>СТС: <%= trailer.STS %></div>
        <div>Статус: <%= trailer.humanized_status %></div>
        </div>
      </div>
    <% end %>  
    <% end %>
    </div>
  </div>
</div>

