<div class="flex items-center justify-center w-full min-h-screen bg-gray-200">
  <div class="flex -mx-2 shadow-lg">
  <div class="w-full max-w-lg hidden sm:flex">
      <img src="/assets/register_page_image.png" alt="Transportation Image" class="object-cover rounded-l ">
  </div>
  <div class="w-full max-w-md bg-white rounded-r px-12 pt-6 pb-8">
  <h2 class="text-2xl font-bold text-left text-gray-700 mb-4">Регистрация</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      

      <div class="relative">
        <%= f.label :name,"Имя", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white" %>
        
        <%= f.text_field :name, class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'"  %>
      </div>

      <div class="relative mt-6">
        <%= f.label :lastname,"Фамилия", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white"  %>
        <%= f.text_field :lastname, class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'"   %>
      </div>

      <div class="relative mt-6">
        <%= f.label :patronymic,"Отчество", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white" %>
        <%= f.text_field :patronymic, class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'" %>
      </div>

      <div class="relative mt-6">
        <%= f.label :email,"Email", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white" %>
        <%= f.email_field :email, class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'" %>
      </div>

      <div class="relative mt-6">
        <%= f.label :password,"Пароль", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white" %>
        <%= f.password_field :password, autocomplete: "off", class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'" %>
      </div>

      <div class="relative mt-6">
        <%= f.label :password_confirmation,"Подтверждение пароля", class: "absolute text-gray-500 font-bold transition-all left-2 top-1 bg-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "shadow appearance-none border-b rounded w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-green-500 focus:border-green-500", onfocus: "this.previousElementSibling.style.transform='scale(0.85) translateY(-90%)'; this.previousElementSibling.style.color='green'", onblur: "if(this.value==='') this.previousElementSibling.style.transform='none'; this.previousElementSibling.style.color='rgb(107 114 128)'" %>
      </div>
      <div class="flex items-center justify-between mt-4">
        <%= f.submit "Зарегистрироваться", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
      </div>
    <% end %>
    <div class="flex justify-between mt-2">
      <%= render "devise/shared/links" %>
      </div>
    </div>
    
  </div>
</div>
